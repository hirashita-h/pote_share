<div class="row justify-content-center">
  <td><% if @room.image? %>
      <%= image_tag(@room.image_url, width: 100) %>
    <% else %>
      <%= image_tag("default.jpg", width: 100) %>
    <% end %>
  </td>
  <td><%= @room.name%></td>
  <td><%= @room.introduction %></td>
  <td><%= @room.price %></td>
  <h1 class="font-weight-normal mt-3">ルーム予約</h1>
</div>
<div class="row justify-content-center">
  <%= form_with url: confirm_reservation_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :check_in_day, class: "form-label" %>
      <%= f.date_field :check_in_day, class: "form-control", :placeholder => '' %>
    </div>
    <div class="form-group">
      <%= f.label :check_out_day, class: "form-label" %>
      <%= f.date_field :check_out_day, class: "form-control", :placeholder => '' %>
    </div>
    <div class="form-group">
      <%= f.label :number_of_people, class: "form-label" %>
      <%= f.number_field :number_of_people, class: "form-control" %>
    </div>
    <div>
      <%= f.submit "予約する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
