<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">ルーム情報登録</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @room, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "form-label" %>
          <% # <label class="form-label">旅行先</label> %>
          <%= f.text_field :name, class: "form-control", :placeholder => 'ルーム名を入力' %>
        </div>
        <div class="form-group">
          <% # <label class="form-label">感想</label> %>
          <%= f.label :introduction, class: "form-label" %>
          <%= f.text_area :introduction, rows: 10, class: "form-control", :placeholder => 'ルーム説明を入力' %>
        </div>
        <div class="form-group">
          <% # <label class="form-label">感想</label> %>
          <%= f.label :price, class: "form-label" %>
          <%= f.number_field :price, class: "form-control", :placeholder => '一日あたりの料金を入力' %>
        </div>
        <div class="form-group">
          <% # <label class="form-label">感想</label> %>
          <%= f.label :address, class: "form-label" %>
          <%= f.text_field :address, class: "form-control", :placeholder => '住所を入力' %>
        </div>
        <div class="form-group">
          <% # <label class="form-label">画像</label><br> %>
          <%= f.label :image, class: "form-label" %>
          <%= f.file_field :image, class: "form-control" %>
          <%= f.hidden_field :image_cache %>
        </div>
        <div>
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
