<div class="card">
  <div class="card-body">
    <h1>プロフィール</h1>
    <div class="mb-3 text-center"><% if @user.image? %>
        <%= image_tag(@user.image_url, width: 100, class: "rounded-circle") %>
      <% else %>
        <%= image_tag("default.jpg", width: 100) %>
      <% end %></div>
    <%= form_with model:current_user, local: true do |f| %>
      <div class="form-group mb-3">
        <%= f.label :image, "アイコン画像", class: "form-label" %>
        <%= f.file_field :image , class: "form-control", :placeholder => "" %>
      </div>
      <div class="form-group mb-3">
        <%= f.label :name, "名前", class: "form-label" %>
        <%= f.text_field :name , class: "form-control", value: @user_name %>
      </div>
      <div class="form-group mb-5">
        <%= f.label :introduction, "自己紹介", class: "form-label" %>
        <%= f.text_area :introduction, class: "form-control", :placeholder => "自己紹介を入力", rows: 10 %>
      </div>
      <%= f.submit "更新", class: "btn btn-primary form-control mb-2" %>
    <% end %>
    <%= link_to "戻る", :back, class: "btn btn-outline-primary w-100" %>
  </div>
</div>
<div class="card">
  <div class="card-body"></div>
</div>
